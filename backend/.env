# e-Nagarika Backend Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_PATH=./database/enagarika.db

# Firebase Configuration (Optional - leave empty to use JSON only)
# Set USE_FIREBASE=true to enable Firebase
# Get these credentials from Firebase Console > Project Settings > Service Accounts
USE_FIREBASE=false
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# JWT Configuration
JWT_SECRET=enagarika_admin_secret_key_2024_super_secure

# CORS Configuration
FRONTEND_URL=http://localhost:8081

# Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (for future use)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (for future use)  
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=ENAGARIKA